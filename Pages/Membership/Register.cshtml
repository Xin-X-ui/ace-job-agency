@page
@model AceJobAgency.Pages.Membership.RegisterModel
@{
    ViewData["Title"] = "Membership Registration";
}

<section class="auth-grid">
    <div class="hero-panel">
        <p class="kicker">ACE JOB AGENCY</p>
        <h1>Secure membership onboarding.</h1>
        <p>Provide your details once. We encrypt sensitive data and monitor every login.</p>
        <div class="hero-actions">
            <a class="btn btn-outline-primary" asp-page="/Auth/Login">I already have an account</a>
        </div>
    </div>

    <div class="card-shell auth-card">
        <h2>Membership Registration</h2>
        <p class="muted">Complete the form to create your secure profile.</p>

        <form method="post" enctype="multipart/form-data" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <input asp-for="Input.RecaptchaToken" type="hidden" />

            <div class="mb-3">
                <label asp-for="Input.FirstName" class="form-label"></label>
                <input asp-for="Input.FirstName" class="form-control" />
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input.LastName" class="form-label"></label>
                <input asp-for="Input.LastName" class="form-control" />
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input.Gender" class="form-label"></label>
                <select asp-for="Input.Gender" class="form-select">
                    <option value="">Select gender</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                    <option value="Non-Binary">Non-Binary</option>
                    <option value="Prefer not to say">Prefer not to say</option>
                </select>
                <span asp-validation-for="Input.Gender" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input.Nric" class="form-label"></label>
                <input asp-for="Input.Nric" class="form-control" autocomplete="off" />
                <span asp-validation-for="Input.Nric" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input.Email" class="form-label"></label>
                <input asp-for="Input.Email" class="form-control" autocomplete="username" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input.Password" class="form-label"></label>
                <div class="input-group">
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" />
                    <button class="btn password-toggle" type="button" data-toggle-password data-target="#Input_Password" aria-pressed="false">
                        Show
                    </button>
                </div>
                <div id="password-strength" class="form-text"></div>
                <div class="password-checklist" data-password-checklist data-target="#Input_Password">
                    <span class="check-item" data-rule="length"><span class="check-dot"></span>12+ Characters</span>
                    <span class="check-item" data-rule="uppercase"><span class="check-dot"></span>Uppercase</span>
                    <span class="check-item" data-rule="lowercase"><span class="check-dot"></span>Lowercase</span>
                    <span class="check-item" data-rule="number"><span class="check-dot"></span>Numbers</span>
                    <span class="check-item" data-rule="symbol"><span class="check-dot"></span>Symbols</span>
                </div>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                <div class="input-group">
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" />
                    <button class="btn password-toggle" type="button" data-toggle-password data-target="#Input_ConfirmPassword" aria-pressed="false">
                        Show
                    </button>
                </div>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input.DateOfBirth" class="form-label"></label>
                <input asp-for="Input.DateOfBirth" class="form-control" type="date" />
                <span asp-validation-for="Input.DateOfBirth" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input.Resume" class="form-label"></label>
                <input asp-for="Input.Resume" class="form-control" type="file" accept=".pdf,.docx" />
                <div class="form-text">Accepted formats: .pdf, .docx (max 5 MB)</div>
                <span asp-validation-for="Input.Resume" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input.WhoAmI" class="form-label"></label>
                <textarea asp-for="Input.WhoAmI" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Input.WhoAmI" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100">Create membership</button>
        </form>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    @if (Model.RecaptchaEnabled)
    {
        <script src="https://www.google.com/recaptcha/api.js?render=@Model.RecaptchaSiteKey"></script>
        <script>
            (() => {
                const form = document.querySelector('form[method="post"]');
                const tokenInput = document.getElementById('Input_RecaptchaToken');

                if (!form || !tokenInput) {
                    return;
                }

                form.addEventListener('submit', async (event) => {
                    if (tokenInput.value) {
                        return;
                    }

                    if (typeof grecaptcha === 'undefined') {
                        event.preventDefault();
                        return;
                    }

                    event.preventDefault();
                    const token = await grecaptcha.execute('@Model.RecaptchaSiteKey', { action: 'register' });
                    tokenInput.value = token;
                    form.submit();
                });
            })();
        </script>
    }
    <script>
        (() => {
            const passwordInput = document.getElementById('Input_Password');
            const strengthText = document.getElementById('password-strength');

            if (!passwordInput || !strengthText) {
                return;
            }

            passwordInput.addEventListener('input', () => {
                const password = passwordInput.value;
                let score = 0;

                if (password.length >= 12) score++;
                if (/[a-z]/.test(password)) score++;
                if (/[A-Z]/.test(password)) score++;
                if (/\d/.test(password)) score++;
                if (/[^A-Za-z\d]/.test(password)) score++;

                if (password.length === 0) {
                    strengthText.textContent = '';
                    return;
                }

                if (score <= 2) {
                    strengthText.textContent = 'Strength: Weak';
                    strengthText.className = 'form-text text-danger';
                } else if (score <= 4) {
                    strengthText.textContent = 'Strength: Medium';
                    strengthText.className = 'form-text text-warning';
                } else {
                    strengthText.textContent = 'Strength: Strong';
                    strengthText.className = 'form-text text-success';
                }
            });
        })();
    </script>
}
