@page
@model AceJobAgency.Pages.Auth.ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot Password";
}

<h1>Forgot Password</h1>

<p class="text-muted">Enter your account email to generate a reset link.</p>

@if (Model.RequestSubmitted)
{
    <div class="alert alert-info" role="alert">
        If an account exists for that email, a password reset link has been generated.
    </div>

    @if (!string.IsNullOrWhiteSpace(Model.DemoResetLink))
    {
        <div class="alert alert-warning" role="alert">
            Demo mode: open this reset link directly:
            <a href="@Model.DemoResetLink">@Model.DemoResetLink</a>
        </div>
    }
}

<div class="row">
    <div class="col-md-6 col-lg-5">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="mb-3">
                <label asp-for="Input.Email" class="form-label"></label>
                <input asp-for="Input.Email" class="form-control" autocomplete="email" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Generate reset link</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
