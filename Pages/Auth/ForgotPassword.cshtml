@page
@model AceJobAgency.Pages.Auth.ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot Password";
}

<section class="auth-grid">
    <div class="hero-panel">
        <p class="kicker">ACCOUNT RECOVERY</p>
        <h1>Forgot your password?</h1>
        <p>Request a secure reset link to regain access to your account.</p>
    </div>

    <div class="card-shell auth-card">
        <h2>Reset Request</h2>
        <p class="muted">Enter your account email to receive a reset link.</p>

        @if (Model.RequestSubmitted)
        {
            <div class="alert alert-info" role="alert">
                If an account exists for that email, a password reset link has been sent.
            </div>
        }

        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="mb-3">
                <label asp-for="Input.Email" class="form-label"></label>
                <input asp-for="Input.Email" class="form-control" autocomplete="email" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100">Send reset link</button>
        </form>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
