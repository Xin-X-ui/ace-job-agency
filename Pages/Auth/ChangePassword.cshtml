@page
@model AceJobAgency.Pages.Auth.ChangePasswordModel
@{
    ViewData["Title"] = "Change Password";
}

<section class="auth-grid">
    <div class="hero-panel">
        <p class="kicker">SECURITY</p>
        <h1>Change your password.</h1>
        <p>Keep your account secure with a strong, unique password.</p>
    </div>

    <div class="card-shell auth-card">
        <h2>Update Password</h2>
        <p class="muted">Enter your current password and choose a new one.</p>

        @if (!string.IsNullOrWhiteSpace(Model.StatusMessage))
        {
            <div class="alert alert-success" role="alert">@Model.StatusMessage</div>
        }

        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="mb-3">
                <label asp-for="Input.CurrentPassword" class="form-label"></label>
                <div class="input-group">
                    <input asp-for="Input.CurrentPassword" class="form-control" autocomplete="current-password" />
                    <button class="btn password-toggle" type="button" data-toggle-password data-target="#Input_CurrentPassword" aria-pressed="false">
                        Show
                    </button>
                </div>
                <span asp-validation-for="Input.CurrentPassword" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input.NewPassword" class="form-label"></label>
                <div class="input-group">
                    <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" />
                    <button class="btn password-toggle" type="button" data-toggle-password data-target="#Input_NewPassword" aria-pressed="false">
                        Show
                    </button>
                </div>
                <div class="password-checklist" data-password-checklist data-target="#Input_NewPassword">
                    <span class="check-item" data-rule="length"><span class="check-dot"></span>12+ Characters</span>
                    <span class="check-item" data-rule="uppercase"><span class="check-dot"></span>Uppercase</span>
                    <span class="check-item" data-rule="lowercase"><span class="check-dot"></span>Lowercase</span>
                    <span class="check-item" data-rule="number"><span class="check-dot"></span>Numbers</span>
                    <span class="check-item" data-rule="symbol"><span class="check-dot"></span>Symbols</span>
                </div>
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                <div class="input-group">
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" />
                    <button class="btn password-toggle" type="button" data-toggle-password data-target="#Input_ConfirmPassword" aria-pressed="false">
                        Show
                    </button>
                </div>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100">Update password</button>
        </form>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
