<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AceJobAgency</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@400;500;600;700;800&family=JetBrains+Mono:wght@500;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AceJobAgency.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="bg-orb bg-orb-left"></div>
    <div class="bg-orb bg-orb-right"></div>

    <header class="shell-header">
        <nav class="navbar navbar-expand-lg shell-nav">
            <div class="container-xxl">
                <a class="navbar-brand brand-pill" asp-area="" asp-page="/Index">
                    <span class="brand-icon">A</span>
                    <span>
                        <strong>ACE JOB AGENCY</strong>
                        <small>Secure Membership Portal</small>
                    </span>
                </a>
                <button class="navbar-toggler shell-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#appNavbar" aria-controls="appNavbar"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse" id="appNavbar">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0 nav-chip-group">
                        <li class="nav-item">
                            <a class="nav-link chip-link" asp-area="" asp-page="/Index">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link chip-link" asp-area="" asp-page="/SecurityLogs">Security Logs</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container-xxl app-shell">
        <main role="main" class="pb-4">
            @RenderBody()
        </main>
    </div>

    <footer class="app-footer">
        <div class="container-xxl">
            <span>&copy; 2026 Ace Job Agency</span>
            <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
